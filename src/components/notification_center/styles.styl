@import "~components/variables"

.NotificationCenter
  position: relative

  .Bell
    position: relative
    width: 30px
    height: @width
    background: transparent url("~assets/images/bell.svg") no-repeat center center
    cursor: pointer

    .Counter
      display: none
      position: absolute
      right: -5px
      bottom: -5px
      width: 18px
      height: @width
      background: red
      text-align: center
      line-height: @height
      font-size: 12px
      color: white
      border-radius: 50%

  &.with-notifications
    .Bell
      background-image: url("~assets/images/bell-ringing.svg")

      .Counter
        display: block

  .Notifications
    position: absolute
    top: calc(100% + 20px)
    right: 0
    display: none
    list-style: none
    padding: 10px
    width: 350px
    background: white
    border: 1px solid $grey
    border-radius: 3px

    &.visible
      display: block

    .Notification
      padding: 5px
      border-bottom: 1px solid $light-grey

      &:last-child
        border: none

      .title
        color: $dark-grey
        text-transform: uppercase
        font-size: 10px
        margin-bottom: 10px

      .message
        font-size: 12px
