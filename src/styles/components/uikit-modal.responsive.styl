@import "~styles/mixins"

+mobile()
  .Modal
    .modal-overlay
      .title, .modal-content
        width: 100%
        border-radius: 0

      .title
        text-align: left
        padding-left: 10px
        .ellipsis
          display: inline-block
          max-width: 87%
          overflow: hidden
          white-space: nowrap
          text-overflow: ellipsis

        .close
          right: 10px

      .modal-content
        height: 100%
        max-height: 100%
        padding: 5px 10px
